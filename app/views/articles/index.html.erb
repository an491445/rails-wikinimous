<div class="container">
  <h1>Articles</h1>
  <ul>
    <% @articles.each do |article| %>
      <li>
        <strong><%= article.title %></strong><br>
        <%= link_to "read article", article_path(article.id) %> | <%= link_to "edit", edit_article_path(article.id) %> | <%= link_to 'delete', article, method: :delete, data: {confirm: "Are you sure that you want to delete the article '#{article.title}'?"} %>
      </li>
    <% end %>
  </ul>

  <div class="div-margin"><%= link_to "Create new article", new_article_path %></div>
</div>
